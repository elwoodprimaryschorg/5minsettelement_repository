<mvc:View id="idStuItemView" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:sf="sap.ui.layout.form"
	controllerName="studentRegisterAppDescNs.studentRegisterAdPn.controller.stuItem" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="idStuItemPage" title="Student Information">
		<content>
			<!--data/mockData/pics/1A3.jpg-->
			<Image id="idStuImage" src="{image}" width="10em" decorative="false" press="handleImage3Press"/>
			<sf:SimpleForm id="SimpleFormDisplay354" layout="ResponsiveGridLayout" singleContainerFullSize="false">
				<sf:content>
					<!--Issue#2 m1 <Label text="Student Id"/>-->
					<Label text="Student ID#"/>
					<Text text="{stuId}"/>
					<Label text="Name"/>
					<Text text="{stuName}"/>
					<Label text="Address"/>
					<Text text="{stuAddress}"/>
					<Label text="Post Code"/>
					<Text text="{stuPostCode}"/>
					<Label text="Teacher"/>
					<Link text="{stuTeacher}"/>
				</sf:content>
			</sf:SimpleForm>
		</content>
	</Page>
</mvc:View>